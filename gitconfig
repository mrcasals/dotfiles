[include]
  path = ~/.gitconfig.local
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[merge]
  tool = vimdiff
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
  pager = less -+F -c -+X
[apply]
  whitespace = nowarn
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset
